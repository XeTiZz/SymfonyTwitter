{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="css/twitterReg.css">
{% endblock %}
{% block body %}

<div id="t1">
    <div id="t2">
        <div id="t3" class="row d-flex justify-content-center align-items-center">
            <div id="t4" class="CR">
                <h1 class="Account">Création d'un compte</h1>
            </div>

            <div id ="t6" class="card-body p-5">
                {{ form_start(registrationForm) }}
                    
                    <div class="form-outline mb-4">
                        <div class="d-flex justify-content-between">
                            <div id="step1">
                                <div class="form-outline mb-4">
                                    <div class="d-flex justify-content-between">
                                        {{ form_row(registrationForm.nomUtil,{
                                            label: 'Nom',
                                            'attr':{'placeholder':'Name'}
                                        }) }}
                                        {{ form_row(registrationForm.prenomUtil,{
                                            label: 'Prénom',
                                            'attr':{'placeholder':'Firstname'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="d-flex justify-content-between">
                                        {{ form_row(registrationForm.pseudoUtil,{
                                            label: 'Pseudo',
                                            'attr':{'placeholder':'Pseudo'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="d-flex justify-content-between">
                                        {{ form_row(registrationForm.email,{
                                        label: 'Email',
                                        'attr':{'placeholder':'Email'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="d-flex justify-content-between">
                                        {{ form_row(registrationForm.plainPassword.first, {
                                            label: 'Mot de passe',
                                            'attr':{'placeholder':'Mot de passe'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="d-flex justify-content-between">
                                        {{ form_row(registrationForm.plainPassword.second, {
                                            label: 'Retapez le mot de passe',
                                            'attr':{'placeholder':'Retapez le mot de passe'}
                                        }) }} 
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    {{ form_row(registrationForm.ageUtil, {
                                            label: 'Avez-vous plus de 13 ans ? '
                                        }) }}    
                                    {{ form_row(registrationForm.agreeTerms, {
                                            label: 'Êtes-vous en accord avec les termes ?'
                                        }) }}
                                </div>
                                <button type="submit" class="btn btn-lg btn-primary btn-block">Finaliser</button>
                            </div>
                        </div>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
